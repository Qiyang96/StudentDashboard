<%- include('./partials/head') %>
<div>
	<h3>Edit Homework</h3>
</div>
<% console.log(homework) %>
<form
	action="/homeworks/<%= homework.id %>?_method=PATCH"
	method="post"
	style="margin-left: 50px; margin-right: 50px"
>
	<input
		type="text"
		name="student"
		placeholders="student"
		value="<%= homework.student %>"
		style="display: none; margin-bottom: 5px"
	/>
	<input
		type="date"
		name="date"
		placeholder="<%= homework.date %>"
		style="margin-bottom: 5px"
	/>
	<input
		type="text"
		name="homework"
		placeholder=" <%= homework.homework %>"
		style="margin-bottom: 5px"
	/>
	<input
		type="text"
		name="comments"
		placeholder="<%= homework.comments %>"
		style="margin-bottom: 5px"
	/>
	<input type="submit" value="Update" />
</form>
