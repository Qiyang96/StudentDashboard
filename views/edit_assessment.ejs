<%- include('./partials/head') %>

<h3>Edit Assessments</h3>

<form
	action="/assessments/<%= assessments.id %>?_method=PATCH"
	method="post"
	style="margin-left: 50px; margin-right: 50px"
>
	<input
		type="text"
		class="form-control"
		name="student"
		placeholders="student"
		value="<%= assessments.student %>"
		style="display: none; margin-bottom: 5px"
	/>
	<input
		type="date"
		class="form-control"
		name="date"
		placeholder="<%= assessments.date %>"
		style="margin-bottom: 5px"
	/>
	<input
		type="text"
		class="form-control"
		name="testPaper"
		placeholder=" <%= assessments.testPaper %>"
		style="margin-bottom: 5px"
	/>
	<input
		type="text"
		class="form-control"
		name="score"
		placeholder="<%= assessments.score %>"
		style="margin-bottom: 5px"
	/>
	<input type="submit" value="Update" />
</form>
